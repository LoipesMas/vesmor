{
    "compilerOptions": {
        "target": "es6",
        "module": "es2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "declaration": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./js"
    },
    "include": [
        "js/**/*.ts",
        "js/**/*.tsx",
        "js/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
