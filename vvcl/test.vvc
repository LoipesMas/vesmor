append_zero = (str: String) -> String {
    (str ~ "0")
};

main = (a: Bool, b: Int) -> Option<Record> {
    z = < res = if (a, addfour(b), b);>;
    Option::Some` < z | res = @z.res; >
};

rec = (a: Int) -> Record {
    < x = 5; foo = (a*7); >
};

add_two = (a: Int) -> Int {
    added = { (0 + 2 )};
    (a + added)
};

addfour = (value: Int) -> Int {
    (add_two(value) + 2)
};
